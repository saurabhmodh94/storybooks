<h1>Edit Story</h1>
<div class="row">
  <div class="row">
    <div class="input-field">
      <input type="text" name="title" value="{{story.title}}">
      <label for="title">Title</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field">
      <select name="status">
        <option value="public">Public</option>
        <option value="private">Private</option>
        <option value="unpublished" selected>Unpublished</option>
      </select>
      <label for="status">Status</label>
    </div>
  </div>

  <div class="row">
    <p>
      <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if story.allowComments}}
        checked="checked" {{/if}}>
      <label for="filled-in-box">Allow Comments</label>
    </p>
  </div>

  <div class="row">
    <div class="input-field">
      <h5>Tell Us Your Story:</h5>
      <textarea name="body">{{{story.body}}}</textarea>
    </div>
  </div>

  <input type="submit" value="Update" class="btn">
</div>
